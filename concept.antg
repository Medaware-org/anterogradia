@library "org.medaware.anterogradia.libs.Memory"

progn {
    mem:set(key = "guest",
            value = random {
                "Braun",
                "Merkel"
            }),

    sequence {
        "Hello, ",

        if (cond    =   equal(  a = mem:get(key = "guest"),
                                b = "Braun"),
            then    =   "Mr. ",
            else    =   "Mrs. "),

        mem:get(key = "guest")
    }
}